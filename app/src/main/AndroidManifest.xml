<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.trinkettrader" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayInventoryActivity"
            android:label="@string/title_activity_display_inventory"
            android:parentActivityName=".HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.HomePageActivity" />
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.LoginActivity" />
        </activity>
        <activity
            android:name=".AddOrEditItemActivity"
            android:label="@string/title_activity_add_or_edit_item"
            android:parentActivityName=".DisplayInventoryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.DisplayInventoryActivity" />
        </activity>
        <activity
            android:name=".DisplayFriendsActivity"
            android:label="@string/title_activity_display_friends"
            android:parentActivityName=".HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.HomePageActivity" />
        </activity>
        <activity
            android:name=".DisplayUserProfileActivity"
            android:label="@string/title_activity_display_user_profile"
            android:parentActivityName=".HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.HomePageActivity" />
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".ItemDetailsActivity"
            android:label="@string/title_activity_item_details" >
        </activity>
        <activity
            android:name=".EditFriendsListActivity"
            android:label="@string/title_activity_edit_friends_list" >
        </activity>
        <activity
            android:name=".DisplayTradesActivity"
            android:label="@string/title_activity_display_trades"
            android:parentActivityName=".HomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.ualberta.trinkettrader.HomePageActivity" />
        </activity>
    </application>

</manifest>
