<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="ca.ualberta.trinkettrader.Friends.FriendsTrinketDetailsActivity">

    <!-- Bill Donahue; https://github.com/MeetMe/Android-HorizontalListView; 2015-11-20 -->
    <com.meetme.android.horizontallistview.HorizontalListView
        android:id="@+id/gallery"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_above="@+id/addToTradeButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketCategory"
        widget:dividerWidth="10dp"/>

    <TextView
        android:id="@+id/friendsTrinketNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gallery"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Trinket:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:text="Trinket Name"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketName"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendsTrinketName"
        android:layout_alignTop="@+id/friendsTrinketDescriptionTitle"
        android:layout_marginStart="48dp"
        android:text="Trinket Description"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketQuantityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketDescription"
        android:text="Quantity:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendsTrinketName"
        android:layout_alignTop="@+id/friendsTrinketQuantityTitle"
        android:layout_marginStart="20dp"
        android:text="Trinket Quantity"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketQualityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketQuantity"
        android:text="Quality:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendsTrinketName"
        android:layout_alignTop="@+id/friendsTrinketQualityTitle"
        android:layout_marginStart="10dp"
        android:text="Trinket Quality"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketQuality"
        android:text="Category:"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/friendsTrinketCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendsTrinketName"
        android:layout_alignTop="@+id/friendsTrinketCategoryTitle"
        android:layout_marginStart="20dp"
        android:text="Trinket Category"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Button
        android:id="@+id/addToTradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="addToTradeButtonOnClick"
        android:text="Add to Trade"/>
</RelativeLayout>
