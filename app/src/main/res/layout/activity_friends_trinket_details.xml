<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.Friends.FriendsTrinketDetailsActivity">

    <ListView
        android:id="@+id/gallery"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketCategory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trinket Name"
        android:id="@+id/friendsTrinketName"
        android:layout_alignEnd="@+id/gallery"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trinket Description"
        android:id="@+id/friendsTrinketDescription"
        android:layout_below="@+id/friendsTrinketName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trinket Quantity"
        android:id="@+id/friendsTrinketQuantity"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsTrinketDescription"
        android:layout_alignEnd="@+id/gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trinket Quality"
        android:id="@+id/friendsTrinketQuality"
        android:layout_below="@+id/friendsTrinketQuantity"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gallery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trinket Category"
        android:id="@+id/friendsTrinketCategory"
        android:layout_below="@+id/friendsTrinketQuality"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
