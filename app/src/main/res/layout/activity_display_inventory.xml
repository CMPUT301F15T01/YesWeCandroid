<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.DisplayInventoryActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

    </ScrollView>

    <Button
        android:id="@+id/filterButtton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:layout_below="@+id/accessibility_spinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/accessibility_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner_categories"
        android:prompt="@string/activity_display_inventory_category_prompt"
        android:layout_marginTop="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/searchByText"
        android:text="Search"
        android:editable="true"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/accessibility_spinner" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayedTrinkets"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/filterButtton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/addItemButton"
        android:layout_alignBottom="@+id/searchByText"
        android:layout_toEndOf="@+id/filterButtton"
        android:onClick="clickAdd"/>


</RelativeLayout>
