<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.Trades.CreateTradeActivity">

    <TextView
        android:id="@+id/createTradeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Create Trade"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <Spinner
        android:id="@+id/friends_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:prompt="@string/activity_create_trade_friend_prompt"
        android:spinnerMode="dialog"/>

    <TextView
        android:id="@+id/friendNameTitleTradeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/friends_spinner"
        android:layout_marginTop="-20dp"
        android:text="Select a Friend"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/addFriendsItemsTradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friends_spinner"
        android:onClick="addFriendsItemsButtonOnClick"
        android:text="Add Friends Items"/>

    <ListView
        android:id="@+id/friendsItemsTradeListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addYourItemsCounterTradeButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addFriendsItemsTradeButton"/>

    <Button
        android:id="@+id/addYourItemsTradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="113dp"
        android:onClick="addYourItemsButtonOnClick"
        android:text="Add Your Items"/>

    <ListView
        android:id="@+id/yourItemsTradeListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/friendsItemsTradeListView"
        android:layout_marginTop="54dp"
        android:layout_toStartOf="@+id/proposeCounterTradeButton"/>

    <Button
        android:id="@+id/proposeTradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yourItemsTradeListView"
        android:layout_alignParentEnd="true"
        android:onClick="proposeTradeButtonOnClick"
        android:text="Propose Trade"/>


</RelativeLayout>
