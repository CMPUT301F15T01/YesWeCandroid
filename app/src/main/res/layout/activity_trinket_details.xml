<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.Inventory.Trinket.TrinketDetailsActivity">

    <!-- Bill Donahue; https://github.com/MeetMe/Android-HorizontalListView; 2015-11-20 -->
    <com.meetme.android.horizontallistview.HorizontalListView
        android:id="@+id/gallery"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:widget="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        widget:dividerWidth="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketNameTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:text="Trinket: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="84dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketDescriptionTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Description: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="48dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketQuantityTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Quantity: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketQuantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketQualityTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Quality: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketQuality"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketCategoryTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Category: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketAccessibilityTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Accessibility: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketAccessability"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketLatitudeTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Latitude: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketLatitude"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trinketLongitudeTitle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="Longitude: "
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/trinketLongitude"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="60">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="editClick"
            android:text="Edit"/>

        <Button
            android:id="@+id/addYourTrinketToTradeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="addYourTrinketToTradeButtonOnClick"
            android:text="Add To Trade"/>

        <Button
            android:id="@+id/deleteItemButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:onClick="deleteClick"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>
