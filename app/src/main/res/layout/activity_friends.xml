<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.DisplayFriendsActivity">

    <ListView
        android:id="@+id/friendsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/findFriendsButton"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/findFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/findFriendTextField"
        android:onClick="findFriendsOnClick"
        android:text="Add Friend"/>

    <EditText
        android:id="@+id/findFriendTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/viewTrackedFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/findFriendsButton"
        android:onClick="viewTrackedFriendsOnClick"
        android:text="View Tracked Friends"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyone&apos;s Inventories"
        android:id="@+id/search_all_inventories"
        android:layout_below="@+id/findFriendTextField"
        android:layout_alignEnd="@+id/friendsView" />
</RelativeLayout>
