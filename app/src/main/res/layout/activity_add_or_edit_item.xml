<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.AddOrEditItemActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <EditText
        android:id="@+id/itemNameText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/activity_add_or_edit_item_name_prompt" />

    <EditText
        android:id="@+id/itemDescriptionText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/activity_add_or_edit_item_description_text" />

    <Spinner
        android:entries="@array/spinner_categories"
        android:id="@+id/itemCategorySpinner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:prompt="@string/activity_add_or_edit_item_accessibility_prompt"
        android:spinnerMode="dropdown" />

    <Spinner
        android:entries="@array/spinner_qualities"
        android:id="@+id/itemQualitySpinner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:prompt="@string/activity_add_or_edit_item_accessibility_prompt"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:checked="true"
        android:id="@+id/accessibilityCheckbox"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/activity_add_or_edit_item_public_check_box" />

    <!-- Dean; http://stackoverflow.com/questions/21778632/put-two-textviews-side-by-side-in-a-layout; 2015-11-04 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/activity_add_or_edit_item_quantity_text"
            android:id="@+id/textView"/>

        <EditText
            android:ems="10"
            android:id="@+id/itemQuantityText"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/activity_add_or_edit_item_quantity_default" />
    </LinearLayout>

    <Button
        android:id="@+id/pictureLibraryButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="pictureLibraryClick"
        android:text="@string/activity_add_or_edit_item_picture_library_button_text" />

    <Button
        android:id="@+id/takePictureButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="takePictureClick"
        android:text="@string/activity_add_or_edit_item_take_picture_button_text" />

    <Button
        android:id="@+id/removePictureButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="removePictureClick"
        android:text="@string/activity_add_or_edit_item_remove_picture_button_text" />

    <Button
        android:id="@+id/saveItemButton"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="@string/activity_add_or_edit_item_save_button_text" />
</LinearLayout>
