<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.AddOrEditItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/itemCategorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner_categories"
        android:prompt="@string/accessibility_prompt"
        android:layout_below="@+id/itemNameText"
        android:layout_alignParentStart="true"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/itemQualitySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner_qualities"
        android:prompt="@string/accessibility_prompt"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/itemCategorySpinner"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        android:id="@+id/accessibilityCheckbox"
        android:layout_below="@+id/itemQualitySpinner"
        android:layout_alignParentStart="true"
        android:checked="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/itemQuantityText"
        android:layout_below="@+id/accessibilityCheckbox"
        android:layout_alignParentStart="true"
        android:text="@string/item_quantity_default"
        android:layout_alignEnd="@+id/accessibility_spinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveItemButton"
        android:layout_below="@+id/itemQuantityText"
        android:layout_alignEnd="@+id/accessibility_spinner"
        android:onClick="saveClick"/>

</RelativeLayout>
