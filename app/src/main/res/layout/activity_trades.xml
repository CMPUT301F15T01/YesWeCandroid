<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.Trades.TradesActivity">

    <ListView
        android:id="@+id/currentTradesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_trades_button"/>


    <Button
        android:id="@+id/past_trades_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="openPastTrades"
        android:text="Past Trades"/>

    <Button
        android:id="@+id/create_trades_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/currentTradesList"
        android:layout_below="@+id/past_trades_button"
        android:onClick="createTradeButtonOnClick"
        android:text="Create Trade"/>

    <TextView
        android:id="@+id/current_trades_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Current Trades"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>
