<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ca.ualberta.trinkettrader.Trades.InventoryTradeActivity">


<Spinner
    android:id="@+id/inventoryTradeAccessibilitySpinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="65dp"
    android:entries="@array/spinner_categories"
    android:prompt="@string/activity_display_inventory_category_prompt"/>

<Button
    android:id="@+id/inventoryTradeFilterButtton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Filter"/>

<ListView
    android:id="@+id/inventoryTradeDisplayedTrinkets"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</LinearLayout>
