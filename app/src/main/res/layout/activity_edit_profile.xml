<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.ualberta.trinkettrader.User.Profile.EditUserProfileActivity">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_address"
        android:text="Name"/>

    <EditText
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_city"
        android:layout_below="@+id/textView"
        android:text="Address"/>

    <EditText
        android:id="@+id/edit_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_postal_code"
        android:layout_below="@+id/textView2"
        android:text="City"/>

    <EditText
        android:id="@+id/edit_postal_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_phone_number"
        android:layout_below="@+id/edit_city"
        android:text="Postal Code"/>

    <EditText
        android:id="@+id/edit_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_postal_code"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="Phone Number"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photo_download_checkbox"
        android:layout_marginTop="44dp"
        android:text="Save"/>

    <CheckBox
        android:id="@+id/photo_download_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_latitude"
        android:layout_below="@+id/edit_longitude"
        android:text="Photo Download Enabled"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_name"
        android:layout_alignBottom="@+id/edit_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/edit_name"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_city"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:text="City"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_postal_code"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:text="Postal Code"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_phone_number"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:text="Phone Number"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/edit_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_phone_number"
        android:layout_below="@+id/edit_phone_number"
        android:ems="10"
        android:hint="Longitude"
        android:inputType="numberSigned"/>

    <EditText
        android:id="@+id/edit_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/photo_download_checkbox"
        android:layout_below="@+id/edit_latitude"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="numberSigned"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_latitude"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:text="Latitude"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/photo_download_checkbox"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:text="Longitude"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
</RelativeLayout>
